[
  {
    "essential": true,
    "memory": 512,
    "name": "${APP_NAME}",
    "cpu": 1,
    "image": "${IMAGE}",
    "ulimits": [
      {
        "name": "nofile",
        "softLimit": 100000,
        "hardLimit": 203840
      }
    ],
    "environment": [
      {
        "name": "APP_VERSION",
        "value": "${APP_NAME}:${APP_VERSION}"
      }
    ],
    "portMappings": [
      {
        "containerPort": ${APP_PORT},
        "hostPort": ${APP_PORT}
      }
    ],
    "containerDefinitions": [
      {
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/${APP_NAME}",
            "awslogs-region": "ap-south-1",
            "awslogs-create-group": "true",
            "awslogs-stream-prefix": "${APP_NAME}"
          }
        }
      }
    ]
  }
]
